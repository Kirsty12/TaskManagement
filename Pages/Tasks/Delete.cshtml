@page
@model TaskManagementSystem.Pages.Tasks.DeleteModel

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <h4>Task</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.TaskItem.Title
            </dd>
            <dt class="col-sm-2">
                Due Date
            </dt>
            <dd class="col-sm-10">
                @Model.TaskItem.DueDate.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Is Complete
            </dt>
            <dd class="col-sm-10">
                @Model.TaskItem.IsComplete ? "Yes" : "No"
            </dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="TaskItem.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
